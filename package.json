{
  "name": "cam-occt",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run validate && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "typecheck": "tsc --noEmit",
    "validate": "npm run validate:svelte && npm run validate:ts",
    "validate:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --fail-on-warnings",
    "validate:ts": "tsc --noEmit --strict",
    "validate:build": "npm run validate && vite build --mode=production",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/dxf": "^4.6.10",
    "@types/node": "^24.0.15",
    "@types/three": "^0.169.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dxf": "^4.6.1",
    "three": "^0.169.0"
  }
}
