{
  "name": "metalheadcam",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "_preview": "vite preview",
    "preview": "npm run build && wrangler dev",
    "check": "npm run check:ts && npm run check:svelte && npm run lint && npm run prune && npm run duplicates",
    "check:build": "npm run validate && vite build --mode=production",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --fail-on-warnings",
    "check:ts": "tsc --noEmit --strict",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "npm run validate && npm run build && wrangler deploy",
    "fix": "npm run lint:fix && npm run format:fix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check . --log-level error",
    "format:fix": "prettier --write . --log-level error",
    "duplicates": "bash -c 'shopt -s globstar && jscpd --config jscpd.json ./src/**/*.ts'",
    "validate": "npm run format && npm run check && npm run test",
    "test": "npm run test:unit:coverage && npm run test:e2e",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:verbose": "vitest run --reporter=verbose --silent=false",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:vitest": "vitest",
    "prune": "knip",
    "prune:production": "knip --production",
    "worker:dev": "wrangler dev",
    "worker:tail": "wrangler tail",
    "cf-typegen": "wrangler types ./src/worker-configuration.d.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.54.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-cloudflare": "^7.2.3",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/dxf": "^4.6.10",
    "@types/node": "^24.0.15",
    "@types/three": "^0.169.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-barrel-files": "^1.2.2",
    "eslint-plugin-path": "^2.0.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-svelte": "^3.12.3",
    "jscpd": "^4.0.5",
    "jsdom": "^26.1.0",
    "knip": "^5.45.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.40.0",
    "vite": "^5.0.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.34.0"
  },
  "dependencies": {
    "@svar-ui/svelte-grid": "^2.3.0",
    "dxf": "^4.6.1",
    "jsts": "^2.12.1",
    "verb-nurbs": "^3.0.3"
  }
}
